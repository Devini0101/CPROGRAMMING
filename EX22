/*Exercício 24 página 49*/ 

#include <stdio.h> 
#include <stdlib.h> 
#include <math.h> 
int main(){ float hora_decimal; 
    int horas, minutos, total_minutos; 
    printf("Digite a hora no formato HH.MM: "); 
    scanf("%f", &hora_decimal); 
    horas = (int) hora_decimal; 
    minutos = (int) ((hora_decimal - horas) * 100 + 0.5); 
    total_minutos = horas * 60 + minutos; 
    printf("Hora digitada em minutos: %d\n", total_minutos); 
    return 0; 
} 