/*Exercício 15 página 44*/ 
#include <stdio.h> 
#include <stdlib.h> 
int main(){ 
    float precodefabrica,perc_lucro,perc_imposto,lucro,imposto,valor_final; 
    printf("insira o preco de fábrica do veiculo\n"); 
    scanf("%f",&precodefabrica); 
    printf("insira o percentual de lucro\n"); 
    scanf("%f",&perc_lucro); 
    printf("insira o percentual de impostos\n"); 
    scanf("%f",&perc_imposto); 
    lucro=(perc_lucro/100)*precodefabrica;
    imposto=(perc_imposto/100)*precodefabrica; 
    valor_final=precodefabrica+lucro+imposto; 
    printf("o lucro do distribuidor é de %.2f \n",lucro); 
    printf("o valor de imposto é de %.2f \n",imposto); 
    printf("o valor final do veiculo é de %.2f \n",valor_final); 
    return 0; 
} 